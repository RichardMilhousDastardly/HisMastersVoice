<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_mesh_apple"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.software.crucifix.hismastersvoice.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step_0001_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-thin"
            android:text="1). Click on"
            android:textColor="@android:color/white"
            android:textSize="54sp"/>

        <ImageView
            android:id="@+id/step_0001_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_audiotrack_white_48dp"/>

        <ImageView
            android:id="@+id/step_0001_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_audiotrack_white_48dp"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/step_0002_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-thin"
            android:text="2). Click on"
            android:textColor="@android:color/white"
            android:textSize="54sp"/>

        <ImageView
            android:id="@+id/step_0002_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_hearing_white_48dp"/>

        <ImageView
            android:id="@+id/step_0002_dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_audiotrack_white_48dp"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/step_0003_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:fontFamily="sans-serif-thin"
            android:text="3). Say it!, Toonage Plays it!"
            android:textColor="@android:color/white"
            android:textSize="54sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/information_button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_done_white_48dp"
        android:clickable="true"
        android:onClick="clearInformation"/>


</LinearLayout>
